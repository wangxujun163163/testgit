var mclib={};mclib.formatNumber=function(a,b){if(!b&&a>=10)return a;b||(b=2);var c="0000000000"+a;return c.substring(c.length-b)},mclib.getDTime=function(a,b,c){c||(c="DDHHMMSS"),b=b||(new Date).getTime();var d=a-b,e=0,f=0,g=0,h=0;d>0&&(e=Math.floor(d/24/60/60/1e3),d-=24*e*60*60*1e3,f=Math.floor(d/60/60/1e3),d-=60*f*60*1e3,g=Math.floor(d/60/1e3),d-=60*g*1e3,h=Math.floor(d/1e3));var i=mclib.formatNumber(e)+"天",j=mclib.formatNumber(f)+"时",k=mclib.formatNumber(g)+"分",l=mclib.formatNumber(h)+"秒",m=c.replace(/DD/,i).replace(/HH/,j).replace(/MM/,k).replace(/SS/,l);return m},mclib.getPrice=function(a){return a=parseFloat(a),Math.round(a)},mclib.getPromotionPrice=function(a){return a=parseFloat(a),Math.round(a)},mclib.formatPrice=function(a){return-1!=a.toString().indexOf(",")?a:a.toString().split("").reverse().join("").replace(/(\d{3})/g,"$1,").replace(/\,$/,"").split("").reverse().join("")},mclib.cookie=function(a,b,c){if(arguments.length>1&&"[object Object]"!==String(b)){if(c=$.extend({},c),(null===b||void 0===b)&&(c.expires=-1),"number"==typeof c.expires){var d=c.expires,e=c.expires=new Date;e.setDate(e.getDate()+d)}return b=String(b),document.cookie=[a,"=",c.raw?b:b,c.expires?"; expires="+c.expires.toUTCString():"",c.path?"; path="+c.path:"",c.domain?"; domain="+c.domain:"",c.secure?"; secure":""].join("")}c=b||{};var f,g=c.raw?function(a){return a}:decodeURIComponent;return(f=new RegExp("(?:^|; )"+a+"=([^;]*)").exec(document.cookie))?g(f[1]):null},mclib.imgResize=function(a,b){return a},mclib.htmlSpecialChars=function(a){return a.replace(/&/g,"&amp;").replace(/"/g,"&quot;").replace(/'/g,"'").replace(/</g,"&lt;").replace(/>/g,"&gt;")};