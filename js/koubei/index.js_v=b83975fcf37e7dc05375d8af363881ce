function onDOMReady(){initLatestContent(),initCatalogNav(),initArticleMore(),initWindowScroll()}function initLatestContent(){function a(){var a=d.height(),f=e.contentPosition,g=c.height();a+f+20>=g&&b()}function b(){if("1"!=d.attr("loading")){d.attr("loading","1");var a=parseInt(d.attr("time"));isNaN(a)&&(a=1),$.ajax({url:"/aj_article/index",data:{t:a,c:4},dataType:"json",type:"post",success:function(b){if(b&&0==b.code&&b.content&&b.content.length){for(var f=b.content,g=[],h=0;h<f.length;h++){var i=f[h];g.push('<a class="latest_item" href="'+("/article/"+i.id+".html")+'">'),g.push('<p class="latest_title">'+i.title+"</p>"),g.push('<p class="latest_time">'+i.start_time+"</p>"),g.push('<p class="latest_desc">'+i["abstract"].substring(0,30)+'...<span class="detail">详情<em>&gt;</em></p>'),g.push("</a>")}c.append($(g.join("")));var j=e.contentPosition;e.update(j),d.attr("time",a+1)}d.attr("loading","0")},error:function(a){d.attr("loading","0")}})}}var c=$("#latest_content > .viewport > .overview");if(0!=c.length){var d=$("#latest_content");d.tinyscrollbar();var e=d.data("plugin_tinyscrollbar");e.update(),d.bind("move",a)}}function initCatalogNav(){var a=window.location.hash;a.length>1?(a=a.match(/\#\d+/),a=a?a[0].substring(1):0):a=0,catagory.hasOwnProperty(a)||(a=0),$(".catalog_nav .nav_item").removeClass("selected"),$(".catalog_nav .nav_item[catalog="+a+"]").addClass("selected"),$(".catalog_article_wrap").removeClass("selected"),$(".catalog_article_wrap[catalog="+a+"]").addClass("selected"),$(".catalog_nav .nav_item").on("click",function(a){var b=$(this),c=b.attr("catalog");return b.hasClass("selected")?void(window.location.hash=c):($(".catalog_nav .nav_item").removeClass("selected"),b.addClass("selected"),window.location.hash=c,$(".catalog_article_wrap").removeClass("selected"),$(".catalog_article_wrap[catalog="+c+"]").addClass("selected"),void $("html, body").animate({scrollTop:$(".content_wrap").offset().top-2},500))})}function initArticleMore(){$(".article_more").on("click",function(a){var b=$(this);if(!b.hasClass("loading")){b.addClass("loading").text("正在加载...");var c=parseInt(b.attr("time"));isNaN(c)&&(c=1);var d=parseInt(b.attr("catalog"));isNaN(d)&&(d=0);var e={t:c,c:d};(0==d||4==d)&&(e.a=epath_area.id),$.ajax({url:"/aj_article/index",data:e,dataType:"json",type:"post",success:function(a){if(a&&0==a.code&&a.content){for(var d=b.siblings(".article_wrap"),e=a.content,f=[],g=0;g<e.length;g++){var h=e[g];f.push('<a class="article_item" href="'+("/article/"+h.id+".html")+'">'),f.push('<img class="article_img" src="'+h.pc_logo+'" />'),1==parseInt(h.include_video)&&(f.push('<img class="article_video_0" src="/img/koubei/icon_video_0.png" />'),f.push('<img class="article_video_1" src="/img/koubei/icon_video_1.png" />')),f.push('<span class="catalog_tag catalog'+h.category_id+'">'+catagory[h.category_id]+"</span>"),f.push('<p class="article_title">'+h.title+"</p>"),f.push('<p class="article_time">'+h.start_time+"</p>"),f.push('<p class="article_desc">'+h["abstract"].substring(0,90)+"</p>"),f.push("</a>")}if(d.append($(f.join(""))),b.attr("time",c+1),e.length<15)return void b.remove()}b.removeClass("loading").text("加载更多")},error:function(a){b.removeClass("loading").text("加载更多")}})}})}function initWindowScroll(){$(window).scroll(onWindowScroll),onWindowScroll()}function onWindowScroll(){var a=$(".content_wrap"),b=$(".latest_wrap"),c=$(".main_wrap"),d=$(".catalog_nav"),e=$(".catalog_nav_fake"),f=$(window).scrollTop(),g=a.offset().top,h=b.height(),i=c.height();b.removeClass("fixedtop").removeClass("absolutebottom"),d.removeClass("fixedtop"),e.removeClass("fixedtop"),f>=g&&(b.removeClass("fixedtop").removeClass("absolutebottom").addClass("fixedtop"),d.addClass("fixedtop"),e.addClass("fixedtop")),h>=i+g-f&&b.removeClass("fixedtop").removeClass("absolutebottom").addClass("absolutebottom")}$(document).ready(onDOMReady);